{
  "name": "うぇぶコメント拡張機能",
  "description": "卒業制作",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["./scripts/background.js"]
  },
  "icons": {
    "128": "./icons/icon128.png",
    "48": "./icons/icon48.png",
    "16": "./icons/icon16.png"
  },
  "permissions": [
    "tabs",
    "https://*/*",
    "downloads",
    "notifications",
    "background",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "./icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "./scripts/lib/jquery-2.0.2.min.js",
        "./scripts/firebase-app.js",
        "./scripts/firebase-firestore.js",
        "./scripts/pclens.js"
      ]
    }
  ]
}
